{% extends "AdminBundle::layout.html.twig" %}

{% block content %}
<!-- BEGIN CONTENT BODY -->
<div class="page-content-wrapper">
  <div class="page-content">

    <div class="page-bar">
      <ul class="page-breadcrumb">
        <li>
          <span>Liste des stages</span>
        </li>
      </ul>
    </div><br />


    <div class="row">
      <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
          <div class="portlet-title">
            <div class="caption font-dark">
              <i class="icon-settings font-dark"></i>
              <span class="caption-subject bold uppercase"> Liste des stages</span>
            </div>
          </div>
          <div class="portlet-body">
            <div class="table-toolbar">
              <div class="row">
                <div class="col-md-6">
                  <div class="btn-group">
                    <button id="addbtn" class="btn sbold green"> Ajouter un stage
                      <i class="fa fa-plus"></i>
                    </button>
                  </div>
                </div>

              </div>
            </div>
            <table class="table table-striped table-bordered table-hover table-checkable order-column" id="table_1">
              <thead>
                <tr>
                  <th>Id</th>
                  <th>Titre</th>
                  <th>Description</th>
                  <th>Modifier</th>
                  <th>Supprimer</th>
                </tr>
              </thead>
              <tbody>


                {% for entity in entities %}
                <tr class="odd gradeX">

                  <td><span   style="cursor:pointer" onclick="window.location.href='{{ path('stage_edit',{'id':entity.id }) }}'">{{ entity.id }}</span></td>
                  <td><span   style="cursor:pointer" onclick="window.location.href='{{ path('stage_edit',{'id':entity.id }) }}'">{{ entity.titre|slice(0, 25) }}..</span></td>
                  <td><span   style="cursor:pointer" onclick="window.location.href='{{ path('stage_edit',{'id':entity.id }) }}'">{{ entity.description |striptags|slice(0, 30) }}..</span></td>
                  <td>
                    <div style="text-align:center;" class="btn-group">
                      <button onclick="window.location.href='{{ path('stage_edit',{'id':entity.id }) }}'" id="editbtn" class="btn btn-xs default" type="button" > Modifier
                        <i ></i>
                      </button>
                    </div>
                  </td>
                  <td style="text-align:center;">
                    <button onclick="window.location.href='{{ path('stage_delete',{'id':entity.id }) }}'" id="deletebtn" class="btn btn-xs red" type="button" > Supprimer
                      <i ></i>
                    </button>
                  </td>
                </tr>

                {% endfor %}
                </table>
              </div>
            </div>
            <!-- END EXAMPLE TABLE PORTLET-->
          </div>
        </div>
      </div>
      <!-- END CONTENT BODY -->
    </div>
  {% endblock  %}

  {% block scripts_imports %}
  <script>
  $('#addbtn').click(function () {

    var route = "{{ path('ajout_stage') }}";
    window.location.href = route;
  });

  </script>
  <!-- BEGIN PAGE LEVEL PLUGINS -->
  <script src="{{asset('bundles/admin/assets/global/scripts/datatable.js')}}" type="text/javascript"></script>
  <script src="{{asset('bundles/admin/assets/global/plugins/datatables/datatables.min.js')}}" type="text/javascript"></script>
  <script src="{{asset('bundles/admin/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js')}}" type="text/javascript"></script>
  <!-- END PAGE LEVEL PLUGINS -->
  <!-- BEGIN PAGE LEVEL SCRIPTS -->
  <script src="{{asset('bundles/admin/assets/pages/scripts/table-datatables-managed.js')}}" type="text/javascript"></script>
  <!-- END PAGE LEVEL SCRIPTS -->
{% endblock %}
